    font-weight: 600;
}

.contact-info p, .availability p {
    color: #333;
    font-size: 0.95rem;
    margin: 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.contact-info i, .availability i {
    color: #4caf50;
    font-size: 1rem;
    width: 20px;
    text-align: center;
}

/* Action Buttons */
.action-btn {
    padding: 0.8rem 1.5rem;
    border: none;
    border-radius: 4px;
    background-color: #4caf50;
    color: #ffffff;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1.5rem;
    font-size: 0.95rem;
    align-self: flex-start;
}

.action-btn:hover {
    background-color: #45a049;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.action-btn:active {
    transform: translateY(0);
}

/* Improved Modal Styling */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.modal-content {
    background-color: #ffffff;
    border-radius: 8px;
    padding: 2rem;
    width: 90%;
    max-width: 400px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    text-align: center;
    animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.success-icon {
    font-size: 4rem;
    color: #4caf50;
    margin-bottom: 1rem;
}

.modal-content h2 {
    color: #333;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
}

.modal-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
}

.modal-btn {
    padding: 0.8rem 1.5rem;
    min-width: 100px;
    margin-top: 0;
}

.close-btn {
    background-color: #f0f0f0;
    color: #333;
}

.close-btn:hover {
    background-color: #e0e0e0;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .details-grid {
